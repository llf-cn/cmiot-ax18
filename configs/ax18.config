CONFIG_TARGET_ipq60xx=y
CONFIG_TARGET_ipq60xx_generic=y
CONFIG_TARGET_ipq60xx_generic_DEVICE_cmiot_ax18=y

# NSS 加速
CONFIG_PACKAGE_kmod-qca-nss-drv=y
CONFIG_PACKAGE_kmod-qca-nss-dp=y
CONFIG_PACKAGE_kmod-qca-nss-ecm=y
CONFIG_PACKAGE_qca-nss-drv-pppoe=y

# 防火墙选择 firewall4（nftables）
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_nftables=y

# IPv6 支持
CONFIG_IPV6=y
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_ip6tables-nft=y
CONFIG_PACKAGE_ip6tables-extra=y

# UPnP 功能
CONFIG_PACKAGE_luci-app-upnp=y
CONFIG_PACKAGE_miniupnpd=y

# OpenClash
CONFIG_PACKAGE_luci-app-openclash=y

# 最简 LuCI 界面及中文包
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-upnp-zh-cn=y
CONFIG_PACKAGE_luci-i18n-openclash-zh-cn=y

# 基础系统工具
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_coreutils=y
CONFIG_PACKAGE_uhttpd=y
CONFIG_PACKAGE_default-settings=y
CONFIG_PACKAGE_opkg=y

# 完全禁用 WiFi 驱动相关
CONFIG_PACKAGE_kmod-ath11k=n
CONFIG_PACKAGE_kmod-ath11k-common=n
CONFIG_PACKAGE_kmod-ath11k-firmware=n
CONFIG_PACKAGE_kmod-ath11k-firmware-ipq6018=n
CONFIG_PACKAGE_kmod-cfg80211=n
CONFIG_PACKAGE_kmod-mac80211=n
CONFIG_PACKAGE_kmod-wireless=n

# 去除开发和证书负担
CONFIG_DEVEL=n
CONFIG_BUILD_PATENTED=n
CONFIG_PACKAGE_luci-ssl=n
